<?xml version="1.0" encoding="UTF-8"?>
<!-- inset is used to remove border from top, it can remove border from any other side-->
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="-3dp">
    <shape android:id="@+id/container">
        <stroke android:width="3dp" android:color="@color/border" />
        <corners android:topRightRadius="20dp"  android:topLeftRadius="20dp"/>
        <solid android:color="@color/bg"/>
    </shape>
</inset>